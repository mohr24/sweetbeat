            <kind>1</kind>
            <string>/// check for window resize

var window_width = window_get_width();
var window_height = window_get_height();
var ratio = window_width / window_height;

var view_width = x_res_max;
var view_height = y_res_max;

if (view_width / view_height &lt; ratio)
    view_height = view_width / ratio;
else if (view_width / view_height &gt; ratio)
    view_width = view_height * ratio;

view_wview[0] = view_width;
view_hview[0] = view_height;
view_wport[0] = window_width;
view_hport[0] = window_height;

view_hborder[0] = view_wview[0] / 2;
view_vborder[0] = view_hview[0] / 2;

view_lock_top = -f1y * view_hview[0];
view_lock_bottom = f1y * view_hview[0];
view_lock_left = -f1x * view_wview[0];
view_lock_right = f1x * view_wview[0];

view_trigger_top = -f2y * view_hview[0];
view_trigger_bottom = f2y * view_hview[0];
view_trigger_left = -f2x * view_wview[0];
view_trigger_right = f2x * view_wview[0];
</string>
