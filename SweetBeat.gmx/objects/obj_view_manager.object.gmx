move_factor = 1 + .5;
next_pos_x = x;
next_pos_y = y;

prev_player_x = obj_player.x;
prev_player_y = obj_player.y;

l_lock = false;
r_lock = false;
t_lock = false;
b_lock = false;

h_lock_pos = 0;
v_lock_pos = 0;
h_lock_cam = 0;
v_lock_cam = 0;
</string>
